<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"

        android:theme="@android:style/Theme.NoTitleBar"

        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.kaiv.johnny.carfinder.MainActivity"
        style="@android:style/Theme.Holo.Light.NoActionBar.TranslucentDecor">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Дані завантажуються..."
            android:id="@+id/textView" android:textColor="#000000"
            android:textColorHighlight="#fbe57b"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>


    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="vertical"
            android:fillViewport="true"
            android:id="@+id/scrollView"
            android:layout_alignParentEnd="true" android:layout_below="@+id/textView"
            android:layout_alignParentStart="true" android:layout_alignParentBottom="true"
    >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:orientation="vertical">

          </LinearLayout>


    </ScrollView>
    <Button
            style="@android:style/MediaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вихід"
            android:onClick="exit"
            android:id="@+id/button" android:layout_alignBottom="@+id/scrollView" android:layout_alignParentEnd="true"/>
</RelativeLayout>
